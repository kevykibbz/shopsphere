              <li><a href="/faq">FAQ</a></li>
              <li><a href="/contact">Contact us</a></li>
              <% if (!isAuthenticated) { %>
                <li><a href="/account/login">Login</a></li>
              <% } %>
            </ul>
            <!-- End .widget-list -->
          </div>
          <!-- End .widget -->
        </div>
        <!-- End .col-sm-6 col-lg-3 -->

